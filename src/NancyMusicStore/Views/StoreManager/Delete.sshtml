@Master['_Layout']

@Section['Content'] 
<h2>Delete Confirmation</h2>

<p>
    Are you sure you want to delete the album titled
    <strong>@Model.Title</strong>?
</p>

<form action="/storemanager/delete/@Model.AlbumId" method="post">
    <p>        
        <input type="submit" value="Delete" />
    </p>
    <p>
        <a href="/storemanager">Back to List</a>
    </p>
</form>
@EndSection